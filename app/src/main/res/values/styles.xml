<resources xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>


    <style name="spinner_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">gravity</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>

    <style name="TextViewEditFragmentStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/lightGrayAccent</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="queryHint">@string/action_search</item>
        <item name="android:imeActionId">6</item>
    </style>
</resources>
