<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_view"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/add_item"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/secondRow"
            android:layout_toLeftOf="@id/secondRow"
            android:orientation="vertical">

            <EditText
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/item_title_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/itemCategory"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:hint="@string/item_category_hint"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/thirdRow"
            android:layout_toLeftOf="@+id/thirdRow"
            android:orientation="vertical">

            <EditText
                android:id="@+id/itemCount"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/item_count_hint"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/itemPrice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/item_price_hint"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/itemUnit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:entries="@array/units" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addindView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rows"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/itemNewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:hint="@string/item_category_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:textSize="14sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/addItemToCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:src="@android:drawable/ic_input_add"
            android:text="Добавить" />
    </LinearLayout>

</LinearLayout>
